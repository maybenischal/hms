    "keywords": ["dbal", "database", "mongodb", "relational", "doctrine"],
    "license": "BSD",
    "authors": [
        {
            "name": "Slavi Pantaleev",
            "email": "s.pantaleev@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "voku/portable-utf8": "^3.1"
    },
    "suggest": {
		"doctrine/mongodb": "For using with MongoDB",
        "doctrine/dbal": "For using with relational databases"
    },
    "autoload": {
        "psr-0": {
            "Devture\\Component\\DBAL\\": "src/"
        }
    }
}
